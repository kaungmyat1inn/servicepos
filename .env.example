APP_NAME=PhoneService
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

ADMIN_API_KEY=change-this-to-a-secure-random-string

# Central Database (Shops - shared)
CENTRAL_DB_HOST=db
CENTRAL_DB_PORT=3306
CENTRAL_DB_DATABASE=mobileservice_central
CENTRAL_DB_USERNAME=root
CENTRAL_DB_PASSWORD=change-this-password

# Tenant Database (Dynamic - set per request by middleware)
TENANT_DB_HOST=127.0.0.1
TENANT_DB_PORT=3306

# Redis (Optional)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail (Optional)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

